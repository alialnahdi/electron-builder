{
  "name": "my-electron-app",           
  "version": "1.0.2",                   
  "description": "My Electron App with auto-update",  
  "main": "main.js",
  "scripts": {
    "start": "electron .",
 
    "dist": "electron-builder --publish always"
  },
  "author": "SMART_GENX",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.6.2"       
  },
  "devDependencies": {
    "electron": "^36.1.0",              
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.SmartGenx.autoupdate",
    "publish": [
      {
        "provider": "github",
        "owner": "SmartGenx",
        "repo": "hdf-desktops-electron"
      }
    ],
    "win": { "target": "nsis" },
    "mac": { "target": "dmg" },
    "linux": { "target": "AppImage" }
  }
}
